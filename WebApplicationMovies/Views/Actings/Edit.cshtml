@model WebApplicationMovies.Models.Acting

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Acting</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ActingId)

        <div class="form-group">
            <label class="control-label col-mod-2" for="MovieID"> Movie Selection </label>
            <div class="col-md-10">
                @Html.DropDownList("FilmId")
